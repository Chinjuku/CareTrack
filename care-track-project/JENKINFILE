pipeline {
    agent any

    tools {
        nodejs 'node' // Ensure you have a Node.js installation in Jenkin
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from Git repository
                    checkout([$class: 'GitSCM',
                              branches: [[name: "*/main"]],
                              userRemoteConfigs: [[credentialsId: 'github', url: "https://github.com/Chinjuku/CareTrack.git"]]])
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build and install dependencies using Docker
                    sh '''
                        docker build -t care-track-project .
                        docker run --rm -v $PWD:/app care-track-project npm install
                        docker run --rm -v $PWD:/app care-track-project npx prisma generate
                        docker run --rm -v $PWD:/app care-track-project npm run build
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('care-track-project') {  // Ensure Docker-compose is executed in the right directory
                    // Run Docker containers
                    sh 'docker-compose up -d --build'
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean up workspace after build
        }
        success {
            echo 'Build and Deploy succeeded!'
        }
        failure {
            echo 'Build or Deploy failed!'
        }
    }
}
