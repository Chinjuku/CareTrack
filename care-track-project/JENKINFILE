pipeline {
    agent any

    tools {
        nodejs 'node' // Use the Node.js installation you defined in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from Git repository
                    checkout([$class: 'GitSCM',
                              branches: [[name: "*/main"]],
                              userRemoteConfigs: [[credentialsId: 'github', url: "https://github.com/Chinjuku/CareTrack.git"]]])
                }
            }
        }

        stage('Build') {
            steps {
                dir('care-track-project') {  // Navigate to your project folder
                    // Install dependencies and build the Next.js app
                    sh '''
                        npm install
                        ls prisma
                        npx prisma generate --schema=./prisma/schema.prisma
                        npm run build
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('care-track-project') {  // Ensure Docker-compose is executed in the right directory
                    // Run Docker containers
                    sh 'docker-compose up -d --build'
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace after build
            cleanWs()
        }
        success {
            echo 'Build and Deploy succeeded!'
        }
        failure {
            echo 'Build or Deploy failed!'
        }
    }
}
